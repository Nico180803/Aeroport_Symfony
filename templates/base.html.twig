<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}




    {% block stylesheets %}

        <!-- Google Web Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

        <!-- Icon Font Stylesheet -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

        <link rel="stylesheet" href="{{ asset("css/bootstrap.min.css") }}">
        <link rel="stylesheet" href="{{ asset("css/style.css") }}">
        <link rel="stylesheet" href="{{ asset("lib/animate/animate.min.css") }}">
        <link rel="stylesheet" href="{{ asset("lib/owlcarousel/assets/owl.carousel.min.css") }}">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="{{ asset("lib/wow/wow.min.js")  }}"></script>
        <script src="{{ asset("lib/easing/easing.min.js")  }}"></script>
        <script src="{{ asset("lib/waypoints/waypoints.min.js")  }}"></script>
        <script src="{{ asset("lib/counterup/counterup.min.js")  }}"></script>
        <script src="{{ asset("lib/owlcarousel/owl.carousel.min.js")  }}"></script>

        <!-- Template Javascript -->
        <script src="{{ asset("js/main.js")  }}"></script>
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% block body %}

    {% block spinner %}
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
    {% endblock %}

    {% block navbar %}
        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-white navbar-light shadow border-top border-5 border-primary sticky-top p-0">
            <a href="{{ path('app_home')}}" class="navbar-brand bg-primary d-flex align-items-center px-4 px-lg-5">
                <h2 class="mb-2 text-white">Aéroport</h2>
            </a>
            <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <a href="{{ path('app_home') }}" class="nav-item nav-link active">Accueil</a>
                    <a href="{{ path('app_reservation_destination') }}" class="nav-item nav-link">Réserver un vol</a>
                    {% if app.user %}
                        {% if 'ROLE_ADMIN' in app.user.roles %}
                            <a href="{{ path('app_admin') }}" class="nav-item nav-link active">Admin</a>
                        {% endif %}
                    {% endif %}
                    <div class="nav-item dropdown">
                        {% if app.user %}
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">{{ app.user.nom }}</a>
                        {% else %}
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Utilisateur</a>
                        {% endif %}
                        <div class="dropdown-menu fade-up m-0">
                            {% if app.user %}
                                <a href="{{ path('app_utilisateur_profil') }}" class="dropdown-item">Profil</a>
                                <a href="{{ path('app_logout') }}" class="dropdown-item">Déconnexion</a>
                            {% else %}
                                <a href="{{ path('app_utilisateur_new') }}" class="dropdown-item">Inscription</a>
                                <a href="{{ path('app_login') }}" class="dropdown-item">Connexion</a>
                            {% endif %}

                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <!-- Navbar End -->
    {% endblock %}

{% endblock %}
</body>
</html>
