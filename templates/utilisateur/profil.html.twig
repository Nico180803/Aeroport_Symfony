{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    {% block spinner %}
        {{ parent() }}
    {% endblock %}

    {% block navbar %}
        {{ parent() }}
    {% endblock %}
    <div class="container-xxl py-5">
        <div class="container py-5">
            <div class="row g-5 align-items-center">
                <div class="col-lg-5 wow fadeInUp" data-wow-delay="0.1s">
                    <h1>Modifier mon Compte</h1>
                </div>
                <div class="col-lg-7">
                    <div class="bg-light text-center p-5 wow fadeIn" data-wow-delay="0.5s">
                        {{ include('utilisateur/_form.html.twig', {'button_label': 'Update'}) }}
                        {{ include('utilisateur/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-xxl py-5">
        <div class="container py-5">
            <div class="row g-5 align-items-center">
                <div class="col-lg-5 wow fadeInUp" data-wow-delay="0.1s">
                    <h1>Mes Réservations :</h1>
                </div>
                <div class="col-lg-7">
                    <div class="bg-light text-center p-5 wow fadeIn" data-wow-delay="0.5s">
                        {% if reservations is empty %}
                            <p>Vous n'avez pas encore de réservations.</p>
                        {% else %}
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Vol</th>
                                    <th>Date</th>
                                    <th>Heure</th>
                                    <th>Action</th>
                                </tr>

                                </thead>
                                <tbody>
                                {% for reservation in reservations %}
                                    <tr>
                                        <td>{{ reservation.refVol }} </td>
                                        <td>{{ reservation.refVol.dateDepart | date('Y-m-d')  }}</td>
                                        <td>{{ reservation.refVol.heureDepart | date('H:i') }}</td>
                                        <td><a href="">Supprimer</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}